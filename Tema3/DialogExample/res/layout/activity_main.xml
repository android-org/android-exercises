<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/buttonAlert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/button_icon"
        android:text="@string/mi_alert_dialog" />

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAlert"
        android:drawableLeft="@drawable/button_icon"
        android:text="@string/mi_confirm_dialog" />

    <Button
        android:id="@+id/buttonSelect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonConfirm"
        android:drawableLeft="@drawable/button_icon"
        android:text="@string/mi_select_dialog" />

    <Button
        android:id="@+id/buttonSelSingleChoice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSelect"
        android:drawableLeft="@drawable/button_icon"
        android:text="@string/mi_sel_singlechoice_dialog" />

</RelativeLayout>